<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>
    <div class="container">
      <div class="row">
        <h1><%= title %></h1>
      </div>
      <div class="row">
        <div class="col-md-8">
          <form action="/action" method="POST">
            <div class="form-group">
              <label for="secretKey">Secret Key</label>
              <input type="text" class="form-control" id="secretKey" name="secretKey" placeholder="Secret Key" value="<%= secretKey %>">
            </div>
            <div class="form-group">
              <label for="text">Text</label>
              <textarea class="form-control" id="text" name="text" rows="3" placeholder="Text to encode / decode"><%= text %></textarea>
            </div>

            <div class="btn-group">
              <button type="submit" name="encode" class="btn btn-secondary">Encode</button>
              <button type="submit" name="decode" class="btn btn-secondary">Decode</button>
            </div>

            <% if (typeof result !== 'undefined') { %>
              <div class="form-group">
                <label for="text">Result</label>
                <textarea class="form-control" id="text" rows="3" placeholder="Text to encode / decode"><%= result %></textarea>
              </div>
            <% } %>
          </form>
        </div>
      </div>
    </div>    
  </body>
</html>
